@model RelatorioModel
@{
    ViewBag.Title = "Jogos";
}

@if (Model.Jogos.Count == 0)
{
    <h2 style="font-family:Georgia; font-size: 50px; text-align:right"> Nunhum Jogo foi encontrado</h2>
    <div class="pull-right" id="slider">
        <figure>
            <img src='~/Content/Images/Games-1.jpg' class="img-responsive" />
            <img src="~/Content/Images/Games-2013.jpg" class="img-responsive" />
            <img src="~/Content/Images/master_chief_halo_5_guardians-HD.jpg" />
            <img src="~/Content/Images/call_of_duty_black_ops_iii_2015_video_game-2880x1800.jpg" />
            <img src="~/Content/Images/last_of_us_screeens-wallpaper-1366x768.jpg" />
        </figure>
    </div>
}
else
{
    <h2>Jogos</h2>

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td> Total de Jogos: </td>
            <td> @Model.QuantidadeDeJogos</td>
        </tr>

    </table>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 50%">Jogo</th>
                <th style="width: 20%">Categoria</th>
                <th style="width: 10%">Selo</th>
                <th style="width: 10%">Editar</th>
                <th style="width: 10%">Locar</th>
            </tr>
        </thead>
        @foreach (var jogo in @Model.Jogos)
        {
            <tr>
                <td>
                    <a href='~/Jogo/DetalhesJogo/@jogo.Id'> @jogo.Nome</a>
                </td>
                <td>@jogo.Categoria</td>
                <td>@jogo.Selo.Nome.ToUpper()</td>
                <td>
                    <a href="~/Jogo/Editar/@jogo.Id"> Editar</a>
                </td>
                <td>
                    <a href="~/Locacao/Locacao/@jogo.Id"> Locar</a>
                </td>
            </tr>
        }
    </table>
}