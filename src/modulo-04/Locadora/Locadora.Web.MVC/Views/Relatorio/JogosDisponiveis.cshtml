@model RelatorioModel
@{
    ViewBag.Title = "Jogos";
}

@if (Model.Jogos.Count == 0)
{
    <h2 style="font-family:Georgia; font-size: 50px; text-align:right"> Nunhum Jogo foi encontrado</h2>
    <img src='~/Content/Images/Games-1.jpg' class="img-responsive" style="padding:20px" />
}
else
{
    <h2>Jogos</h2>

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td> Jogo mais caro: </td>
            <td> @Model.JogoMaisCaro</td>
        </tr>
        <tr>
            <td> Jogo mais barato: </td>
            <td> @Model.JogoMaisBarato</td>
        </tr>
        <tr>
            <td> Media de preço: </td>
            <td> R$ @Model.MediaDePreco</td>
        </tr>
        <tr>
            <td> Total de Jogos: </td>
            <td> @Model.QuantidadeDeJogos</td>
        </tr>

    </table>

    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th style="width: 40%">Jogo</th>
                <th style="width: 20%">Categoria</th>
                <th style="width: 20%">Preço</th>
                <th style="width: 20%">Selo</th>
            </tr>
        </thead>
        @foreach (var jogo in @Model.Jogos)
        {
            <tr>
                <td>
                    <a href='~/Jogo/DetalhesJogo/@jogo.Id'> @jogo.Nome</a>
                </td>
                <td>@jogo.Categoria</td>
                <td>@jogo.Preco.ToString("c")</td>
                <td>@jogo.Selo</td>
            </tr>
        }
    </table>
}