<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Locadora - @ViewBag.Title</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>*@

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/modernizr")

    <script src='@Scripts.Url("~/bundles/modernizr")' async></script>


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header pull-left">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Locadora LFGames", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse pull-left">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="~/Relatorio/JogosDisponiveis"> Jogos disponíveis</a>
                    </li>
                    <li>
                        <a href="~/Jogo/Editar"> Editar Jogos</a>
                    </li>
                    <li>
                        <a href="~/Login/Sair"> Sair</a>
                    </li>
                </ul>
            </div>
            <div class="navbar-form pull-right">
                <form action='@Url.Action("JogosDisponiveis","Relatorio")' style="padding-top: 5px">
                    <img src="~/Content/Images/search-icon-md.png" width="35" height="25" style="vertical-align: top"/>
                    <input class="dark-label" type="text" name="nome" style="margin-left: 5px"/>
                    <input class="dark-button" type="submit" value="Buscar"/>
                </form>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer class="bottom-left">
            <hr />
            <p style="color: black">&copy; @DateTime.Now.Year - CWI Crescer</p>
        </footer>
    </div>

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("Scripts", false)
</body>
</html>