@model LocacaoModel
@{
    ViewBag.Title = "Locacao";
}

<h2>Locacao</h2>
<div class="container">
    <div class="row text-center">
        @Html.Partial("_Locacao", Model)
    </div>
    <hr />
    <div class="col-lg-10 form-inline text-center">

        @using (Html.BeginForm("Salvar", "Locacao", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.ValidationSummary(false)
            @Html.HiddenFor(m => m.DataLocacao) 
            @Html.HiddenFor(m => m.ValorInicial)
            @Html.HiddenFor(m => m.IdJogo)
            @Html.HiddenFor(m => m.DataPrevistaEntrega)
            <div class="form-group">
                @Html.LabelFor(m => m.IdClient, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.IdClient, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.IdClient)
                </div>
                
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-2">
                    <button type="submit" class="btn btn-primary">Finalizar locação</button>
                </div>
            </div>
        }
    </div>
</div>
