package br.com.cwi.crescer;

import java.util.ArrayList;
import java.util.List;

import br.com.cwi.crescer.SimpleLinkedList.Node;

public abstract class LinkedList<T> {
	
	protected Node first, last;
	
	abstract void add(int index, T value);
	
	abstract void addFirst(T value);
	
	abstract void addLast(T value);
	
	abstract void removeFirst();
	
	abstract void remove(int index);
	
	List<T> list(){
		ArrayList<T> lista = new ArrayList<T>(); 
		Node node = first;
		lista.add(node.getValue());
		while(node != last){
			node = node.getNext();
			lista.add(node.getValue());
		}
		return lista;
	}
	
	boolean isEmpty(){
		return first == null;
	}
	
	abstract class Node<T>{
		abstract T getNext();
		abstract T setNext(T value);
	}
}
